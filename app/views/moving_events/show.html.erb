<h1><%=@moving_event.name%></h1>

<li>Starting Day: <%=@moving_event.start_date.strftime("%m/%d/%y")%></li>
<li><%=@moving_event.start_time%></li>
<li><%=@moving_event.location%></li>
<li><%=@moving_event.new_location%></li>


<ol>
  <h2>The Crew</h2>
  <% @moving_event.movers.each do |mover|%>
  <li><%= link_to mover.full_name, mover%>  <%=link_to 'remove'%></li>
  <%end%>
</ol>

<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@moving_event.latitude},#{@moving_event.longitude}&markers=#{@moving_event.latitude},#{@moving_event.longitude}&zoom=7&size=640x400&key=AIzaSyDs5XjtC_PfhFPV7Yl7RCO185HnKnHqlfY",
              class: 'img-fluid img-rounded', alt: "#{@moving_event.name} on the map"%>


<% form_for(:request, :url => new_movee_moving_event_request_path(@movee.id,@moving_event.id)) do |f| %>
        <%= f.hidden_field :status, value:'pending' %>
        <%= f.hidden_field :moving_event_id, value:@moving_event.id  %>
        <%= f.hidden_field :mover_id, value: current_user.id%>
        <%= f.submit 'Submit a Request' %>
<% end %>

<%= link_to "Make a request", new_movee_moving_event_request_path(@movee.id,@moving_event.id, :moving_event_id => @moving_event.id, :mover_id => current_user.meta_id, {:action => :create}, :method => :post) %>
